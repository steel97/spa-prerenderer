{
  "Kestrel": {
    "EndPointDefaults": {
      "Protocols": "Http1AndHttp2"
    },
    "Endpoints": {
      "HTTP": {
        "Url": "http://*:4999"
      },
      "HTTPS": {
        "Url": "https://*:5000"
      }
    }
  },
  "AllowedHosts": "*",
  "Common": {
    "CacheHTML": true,
    "CacheHTMLInterval": 60000,
    "Placeholders": [
      {
        "Key": "lang",
        "Order": 0,
        "Targets": [
          "en",
          "ru",
          "zh",
          "fa"
        ]
      },
      {
        "Key": "coin",
        "Order": 1,
        "Targets": [
          "eth",
          "etc",
          "rvn",
          "veil",
          "cfx",
          "erg",
          "ctxc",
          "ae",
          "aion",
          "sero",
          "grin",
          "mwc",
          "zel",
          "btg"
        ]
      }
    ]
  },
  "CacheCrawler": {
    "Puppeteer": {
      "BrowserSource": "local",
      "Headless": true
    },
    "RescanInterval": 600000,
    "PageScanTimeout": 30000,
    "CacheToMemory": false,
    "BaseUrl": "http://localhost:4999",
    "CacheRoutes": [
      {
        "Pattern": "/"
      },
      {
        "Pattern": "/{lang}/faq"
      },
      {
        "Pattern": "/{lang}/tos"
      },
      {
        "Pattern": "/{lang}/privacy"
      },
      {
        "Pattern": "/{lang}/coin/{coin}"
      }
    ]
  },
  "SPA": {
    "NotFound": {
      "Use404Code": true,
      "KnownRoutes": [
        {
          "Pattern": "\/",
          "IncludeQueryString": false
        },
        {
          "Pattern": "\/{lang}",
          "IncludeQueryString": false
        },
        {
          "Pattern": "\/{lang}\/faq",
          "IncludeQueryString": false
        },
        {
          "Pattern": "\/{lang}\/tos",
          "IncludeQueryString": false
        },
        {
          "Pattern": "\/{lang}\/privacy",
          "IncludeQueryString": false
        },
        {
          "Pattern": "\/{lang}\/coin\/{coin}",
          "IncludeQueryString": false
        },
        {
          "Pattern": "\/ru\/coin\/rvn\/wallet\/.+",
          "IncludeQueryString": false
        }
      ]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}